{
  "name": "corporate-ui-dev",
  "version": "4.0.0-beta.3",
  "description": "In this repository we're developing the next generation components for Corporate UI",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scania/corporate-ui-dev.git"
  },
  "module": ".build/collection/helpers/index.js",
  "main": ".build/collection/helpers/index.js",
  "collection": ".build/collection/collection-manifest.json",
  "files": [
    ".build"
  ],
  "scripts": {
    "abc": "cd node_modules/corporate-ui-docs/dist/corporate-ui-docs && http-server",
    "def": "cd www && http-server",
    "start": "npm run abc && npm run def",
    "build": "stencil build --dev --esm",
    "release": "gulp release",
    "clean": "gulp clean",
    "server": "gulp server",
    "storybook": "start-storybook -p 1337 -c public",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint-fix": "npm run lint -- --fix",
    "lint-debug": "npm run lint -- --debug",
    "test": "stencil test --spec --verbose",
    "test.watch": "stencil test --spec --e2e --watchAll"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "5.11.2",
    "@fortawesome/free-brands-svg-icons": "5.11.2",
    "@fortawesome/free-solid-svg-icons": "5.11.2",
    "@stencil/core": "1.8.1",
    "@stencil/router": "1.0.1",
    "@stencil/sass": "1.0.1",
    "@types/jest": "24.0.23",
    "@types/puppeteer": "1.19.0",
    "bootstrap": "4.3.1",
    "highlight.js": "9.16.2",
    "jest": "24.9.0",
    "jest-cli": "24.9.0",
    "jquery": "3.4.1",
    "popper.js": "1.15.0",
    "puppeteer": "1.19.0",
    "redux": "4.0.4"
  },
  "license": "MIT"
}
